@{
    ViewData["Title"] = "Giriş";
}

<div class="fullpage-container">
    <div class="left-side">
        <div class="login-panel">

            <h2 class="login-title">Hoş Geldiniz</h2>
            <p class="login-subtext">Lütfen giriş yapın</p>

            <form method="post">
                <input type="email" placeholder="E-posta" class="form-control custom-input" required />
                <input type="password" placeholder="Şifre" class="form-control custom-input" required />
                <button type="submit" class="btn btn-login">Giriş Yap</button>
            </form>

            <!-- 🔁 Login/Register Geçiş Butonu -->
            <div class="toggle-auth-buttons">
                <button class="btn switch-btn active">Giriş</button>
                <button class="btn switch-btn">Kayıt</button>
            </div>

            <!-- 🔐 Login With Bölümü -->
            <div class="social-login">
                <p class="divider-text">veya</p>
                <button class="btn btn-google">Google ile Giriş</button>
                <button class="btn btn-apple">Apple ile Giriş</button>
            </div>

        </div>
    </div>

    <div class="middle-line"></div>

    <div class="right-side">
        <!-- Şimdilik boş -->
    </div>
</div>
